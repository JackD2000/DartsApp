<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DartsScoreApp.MainMenuPage"
             NavigationPage.HasNavigationBar="False">

    <StackLayout BackgroundColor="Green">
        <Frame BackgroundColor="ForestGreen" Padding="24" CornerRadius="0">
            <Label Text="Free Darts Scoreboard"
                   HorizontalTextAlignment="Center"
                   TextColor="White"
                   FontSize="36" />
        </Frame>
        <!-- <Label Text="Start developing now" FontSize="Title" Padding="30,10,30,10"/> -->

        <Grid VerticalOptions="CenterAndExpand" HorizontalOptions="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <Button Text="New Game"
                    Grid.Row="0"/>
            <Button Text="Users"
                    Grid.Row="1"
                    Clicked="OnUsersButtonClicked" />
            <Button Text="Settings"
                    Grid.Row="2" />
            <Button Text="Exit"
                    Grid.Row="3" />
        </Grid>
    </StackLayout>

</ContentPage>
